shader BrightnessContrast(
    color Color = 0.0,
    float Brightness = 0.0,
    float Contrast = 0.0,
    int Clamp = 1
        [[ string label = "Clamp Positive", string widget = "checkBox" ]],
    output color Value = 0.0
        [[ string label = "Color" ]]
) {
    Value = (1.0 + Contrast) * Color + (Brightness - Contrast * 0.5);
    if (Clamp) {
        Value = max(vector(0.0), Value);
    }
}